#--------------------------------------------------------------------
# Example Environment Configuration file
#
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env file with real credentials to version control
#
# By default, all of the settings are commented out. If you want
# to override the setting, you must un-comment it by removing the '#'
# at the beginning of the line.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080'
# app.forceGlobalSecureRequests = false
# app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = db_serikat_pekerja
database.default.username = root
database.default.password = YOUR_DATABASE_PASSWORD_HERE
database.default.DBDriver = MySQLi
database.default.port = 3306

# If you use MySQLi as tests, first update the values of Config\Database::$tests.
# database.tests.hostname = localhost
# database.tests.database = ci4_test
# database.tests.username = root
# database.tests.password = root
# database.tests.DBDriver = MySQLi
# database.tests.DBPrefix =
# database.tests.charset = utf8mb4
# database.tests.DBCollat = utf8mb4_general_ci
# database.tests.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# encryption.key = YOUR_32_CHARACTER_ENCRYPTION_KEY_HERE
# Generate using: php spark key:generate

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\DatabaseHandler'
session.savePath = 'ci_sessions'
session.cookieName = 'ci_session'
session.expiration = 7200
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

# logger.threshold = 4

#--------------------------------------------------------------------
# EMAIL CONFIGURATION
#--------------------------------------------------------------------
# For Gmail SMTP:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the app password below (not your regular Gmail password)

email.protocol = smtp
email.SMTPHost = ssl://smtp.googlemail.com
email.SMTPPort = 465
email.SMTPUser = your-email@gmail.com
email.SMTPPass = your-gmail-app-password-here
email.SMTPCrypto = ssl
email.mailType = html
email.charset = utf-8
email.newline = "\r\n"
email.fromEmail = your-email@gmail.com
email.fromName = 'Serikat Pekerja Kampus'

#--------------------------------------------------------------------
# SECURITY NOTES
#--------------------------------------------------------------------
# - Never commit .env file with real credentials
# - Change all default passwords in production
# - Use strong encryption keys
# - Enable HTTPS in production (app.forceGlobalSecureRequests = true)
# - Set CI_ENVIRONMENT = production in production
